{
  "private": true,
  "name": "@url-shortener/api",
  "version": "1.0.0",
  "description": "Backend API for URL-shortener",
  "engines": {
    "node": ">=23.6.0"
  },
  "main": "index.js",
  "types": "dist/types/index.d.js",
  "scripts": {
    "precompile": "rimraf dist",
    "compile": "tsc && tsc-alias",
    "lint": "biome check src",
    "lint:fix": "npm run lint -- --write",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "start:dev": "tsx src",
    "start:watch": "tsx watch --clear-screen=false --include src src",
    "start": "npm run compile && node index.js",
    "docker:up": "pnpm install && docker-compose up --build",
    "docker:down": "docker-compose down",
    "docker:ls": "docker ps -a",
    "docker:lsi": "docker images",
    "docker:stop": "docker ps -aq | xargs docker stop -t 1",
    "docker:rm": "docker ps -aq | xargs docker rm",
    "docker:rmi": "docker images -q | xargs docker rmi",
    "docker:cleanup": "npm run docker:stop && npm run docker:rm",
    "docker:purge": "npm run docker:cleanup && npm run docker:rmi",
    "mikro-orm-esm": " mikro-orm-esm",
    "docker:micro": "docker exec -it url-shortener-api npm run  mikro-orm-esm",
    "docker:micro:debug": "npm run docker:micro -- debug",
    "mg:new": "npm run  mikro-orm-esm migration:create",
    "mg:up": "npm run  mikro-orm-esm migration:up",
    "mg:down": "npm run  mikro-orm-esm migration:down",
    "mg:ls": "npm run  mikro-orm-esm migration:list",
    "mg:check": "npm run  mikro-orm-esm migration:check",
    "mg:pending": "npm run  mikro-orm-esm migration:pending",
    "mg:fresh": "npm run  mikro-orm-esm migration:fresh",
    "mg:seed": "npm run mg:fresh -- --seed"
  },
  "readmeFilename": "SEE README IN ./README.md",
  "author": {
    "name": "Oleh Kravchuk",
    "email": "oleh.kravchuk.ua@gmail.com",
    "url": "https://github.com/oleh-kravchuk-ua"
  },
  "dependencies": {
    "@mikro-orm/core": "^6.4.5",
    "@mikro-orm/migrations": "^6.4.5",
    "@mikro-orm/mongodb": "^6.4.5",
    "@mikro-orm/reflection": "^6.4.5",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^5.0.1",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^8.0.0",
    "inversify": "^6.2.2",
    "inversify-logger-middleware": "^3.1.0",
    "loglayer": "^5.6.0",
    "morgan": "^1.10.0",
    "reflect-metadata": "^0.2.2",
    "semver": "^7.7.1"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^6.4.5",
    "@tsconfig/strictest": "^2.0.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/morgan": "^1.9.9",
    "@types/node": "^22.13.1",
    "@types/semver": "^7.5.8",
    "@vitest/coverage-v8": "^3.0.5",
    "rimraf": "^6.0.1",
    "tsc-alias": "^1.8.10",
    "tslib": "^2.8.1",
    "tsx": "^4.7.1",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
